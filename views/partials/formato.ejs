<div class="container mt-3">

  <div class="jumbotron">
    <h1 style="color: green">Bienvenido <%=datos.username %> </h1>
    <a class="btn btn-success mt-3 mb-5" href="./logout">Desloguear</a>
    <br />
  </div>
  <div class="jumbotron">
    <h1 style="color: blue">Mis Productos</h1>
    <br />

    <form onsubmit="return addProduct( )">
      <div class="form-group">
        <label for="producto"><b>Titulo</b></label>
        <input id="producto" class="form-control" type="text" name="producto" />
      </div>

      <div class="form-group">
        <label for="precio"><b>Precio</b></label>
        <input id="precio" class="form-control" type="text" name="precio" />
      </div>

      <div class="form-group">
        <label for="thumbnail"><b>Thumbnail</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail" />
      </div>

      <button class="btn btn-success mt-3 mb-5">Send</button>
    </form>

    <h2 style="color: crimson">Historial</h2>

    <div class="table-responsive" id="zonaProductos">
      <table class="table table-dark" id="tableProducts">
        <thead>
          <tr style="color: yellow">
            <th>Producto</th>
            <th>Precio</th>
            <th>Thumbnail</th>
          </tr>
        </thead>
        <tbody id="tablaProductos"></tbody>
      </table>
    </div>
  </div>
  <div class="jumbotron">
    <div>
      <h1 style="color: blue">Chat</h1>
      <div id="compresion">Compresi√≥n:</div>
    </div>
    <br />
    <form onsubmit="return addMessage()">
      <div class="form-group">
        <label for="mail"><b>Email</b></label>
        <input id="mail" class="form-control" type="text" name="mail" />
      </div>
      <div class="form-group">
        <label for="username"><b>Nombre</b></label>
        <input id="username" class="form-control" type="text" name="username" />
      </div>
      <div class="form-group">
        <label for="apellido"><b>Apellido</b></label>
        <input id="apellido" class="form-control" type="text" name="apellido" />
      </div>
      <div class="form-group">
        <label for="edad"><b>Edad</b></label>
        <input id="edad" class="form-control" type="text" name="edad" />
      </div>
      <div class="form-group">
        <label for="alias"><b>Alias</b></label>
        <input id="alias" class="form-control" type="text" name="alias" />
      </div>
      <div class="form-group">
        <label for="avatar"><b>Avatar Url</b></label>
        <input id="avatar" class="form-control" type="text" name="avatar" />
      </div>

      <div id="messagesMain">Mensajes</div>

      <div class="form-group">
        <input id="message" class="form-control" type="text" name="message" />
      </div>

      <button class="btn btn-success mt-3 mb-5">Send</button>
    </form>
  </div>
</div>